# Production Environment Variables Template
# Copy this to .env.production and fill in the values

PORT=5000
NODE_ENV=production

# Database (Render will auto-populate these)
DB_HOST=
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_PORT=3306

# JWT (Generate a strong secret)
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS (Set to your frontend domain or * for all)
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
