{
  "name": "psdprs-backend",
  "version": "1.0.0",
  "description": "Print Shop Daily Production & Revenue System - Backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/migrations/run.js --seed && node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "cd frontend && npm install --production=false --legacy-peer-deps && npm run build",
    "prod": "pm2 start ecosystem.config.js --env production",
    "prod:stop": "pm2 stop psdprs-backend",
    "prod:restart": "pm2 restart psdprs-backend",
    "prod:logs": "pm2 logs psdprs-backend",
    "test": "jest --coverage",
    "migrate": "node src/migrations/run.js",
    "migrate:safe": "node src/migrations/run.js || echo 'Migrations already applied'",
    "seed": "node src/migrations/seed.js",
    "seed:safe": "node src/migrations/seed.js || echo 'Seed already applied'",
    "backup": "node scripts/backup.js create",
    "backup:db": "node scripts/backup.js create-db",
    "backup:files": "node scripts/backup.js create-files",
    "backup:list": "node scripts/backup.js list",
    "backup:clean": "node scripts/backup.js clean"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "pdfkit": "^0.13.0",
    "pg": "^8.18.0",
    "pm2": "^5.4.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
